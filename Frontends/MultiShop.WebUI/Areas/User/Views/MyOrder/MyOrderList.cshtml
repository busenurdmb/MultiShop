@model List<ResultOrderingByUserIdDto>
@{
    ViewData["Title"] = "MyOrderList";
    Layout = "~/Areas/User/Views/UserLayout/Index.cshtml";
    int count = 0;
  
}
<style>
    /* CSS ile her bir tablo satırı için farklı bir arka plan rengi belirliyoruz */

    .table-striped tbody tr:nth-child(1) { 
        background-color: #d1ecf1; /* table-info rengine benzer bir renk */
    }

    .table-striped tbody tr:nth-child(2) { 
        background-color: #ffeeba; /* table-warning rengine benzer bir renk */
    }

    .table-striped tbody tr:nth-child(3) { 
        background-color: #f5c6cb; /* table-danger rengine benzer bir renk */
    }

    .table-striped tbody tr:nth-child(4) { 
        background-color: #c3e6cb; /* table-success rengine benzer bir renk */
    }

    .table-striped tbody tr:nth-child(5) { 
        background-color: #b8daff; /* table-primary rengine benzer bir renk */
    }

    .table-striped tbody tr:nth-child(6) { 
        background-color: #d6d8db; /* table-dark rengine benzer bir renk */
    }

    .table-striped tbody tr:nth-child(7) { 
        background-color: #e2e3e5; /* table-secondary rengine benzer bir renk */
    }

    /* Eğer 7'den fazla satır varsa, CSS otomatik olarak 8. satırdan itibaren baştan renkleri tekrar eder */
</style>


<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Sipariş Geçmişim</h4> <!-- Başlık -->
                        <div class="table-responsive pt-3">
                            <table class="table table-bordered table-striped"> <!-- table-striped sınıfı burada ekleniyor -->
                                <thead>
                                    <tr>
                                        <th>#</th> <!-- Sıra Numarası -->
                                        <th>Toplam Fiyat</th> <!-- Toplam Fiyat -->
                                        <th>Sipariş Tarihi</th> <!-- Sipariş Tarihi -->
                                        <th>Sipariş Detayları</th> <!-- Sipariş Detayları -->
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model) // Modeldeki her bir öğe için döngü başlatıyoruz
                                    {
                                        count++; // Sayaç bir artırılıyor
                                        <tr> <!-- CSS'deki renkler bu tr öğesine otomatik olarak uygulanacak -->
                                            <th>@count</th> <!-- Sayaç değeri gösteriliyor -->
                                            <td>@item.TotalPrice</td> <!-- Toplam Fiyat -->
                                            <td>@(((DateTime)item.OrderDate).ToString("dd-MMM-yyyy"))</td> <!-- Sipariş Tarihi -->
                                            <td><a href="#" class="btn btn-warning">Sipariş Detayları</a></td> <!-- Sipariş Detayları Butonu -->
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>