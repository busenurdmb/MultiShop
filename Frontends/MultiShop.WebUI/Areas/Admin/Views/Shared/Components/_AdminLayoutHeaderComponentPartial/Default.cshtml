<header class="main-header dark-bg">
    <!-- Logo -->
    <a href="../index.html" class="logo dark-bg">
        <!-- mini logo for sidebar mini 50x50 pixels -->
        <span class="logo-mini">
            <img src="~/images/logos/mulhtishop1.jpg" style="width:50px;height:50px !important;" alt="Ovio">
        </span>
        <!-- logo for regular state and mobile devices -->
        <span class="logo-lg">
            <img src="~/images/logos/mulhtishop1.jpg" style="width:200px;height:50px !important;" alt="Ovio">
        </span>
    </a>

    <!-- Header Navbar -->
    <nav class="navbar navbar-static-top " style="background-color: #34495e" role="navigation">
        <!-- Sidebar toggle button-->
        <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
            <span class="sr-only">Toggle navigation</span>
        </a>
        <div class="pull-left search-box" >
            <form action="#" method="get" class="search-form">
                <div class="input-group">
                    <input type="text" name="search" class="form-control" style="background-color: #34495e"; placeholder="Aranacak kelimeyi giriniz">
                    <span class="input-group-btn">
                        <button type="submit" name="search" id="search-btn" class="btn btn-flat">
                            <i class="fa fa-search"></i>
                        </button>
                    </span>
                </div>
            </form>
        </div>
        <!-- Navbar Right Menu -->
        <div class="navbar-custom-menu">
            <ul class="nav navbar-nav">
                <li class="dropdown messages-menu">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <i class="icon-envelope" style="color: white;">
                            @ViewBag.messageCount
                            <span class="heartbit" style="position:relative;top:-10px;color: white;">
                                <strong id="messageCount"></strong>
                            </span>
                            <span class="point"></span>
                        </i>
                    </a>
                    <ul class="dropdown-menu">
                        <li class="header" style="color: white;">You have 4 messages</li>
                        <li>
                            <ul class="menu">
                                <li>
                                    <a href="#">
                                        <div class="pull-left">
                                            <img src="../dist/img/img1.jpg" class="img-circle" alt="User Image">
                                        </div>
                                        <h4 style="color: white;">Admin Paneli</h4>
                                        <p style="color: white;">Lorem ipsum dolor sit amet.</p>
                                        <p><small><i class="fa fa-clock-o"></i> 2 mins</small></p>
                                    </a>
                                </li>
                                <!-- Other messages go here -->
                            </ul>
                        </li>
                        <li class="footer"><a href="#" style="color: white;">Check all notifications</a></li>
                    </ul>
                </li>
                <!-- Notifications Menu -->
                <li class="dropdown notifications-menu">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <i class="icon-megaphone" style="color: white;">@ViewBag.totalCommentCount</i>
                        <div class="notify">
                            <span class="heartbit"></span>
                            <span class="point"></span>
                        </div>
                    </a>
                    <ul class="dropdown-menu">
                        <li class="header" style="color: white;">Notifications</li>
                        <li>
                            <ul class="menu">
                                <li><a href="#" style="color: white;"><i class="icon-lightbulb"></i> Lorem ipsum dolor sit amet</a></li>
                                <!-- Other notifications go here -->
                            </ul>
                        </li>
                        <li class="footer"><a href="#" style="color: white;">View all</a></li>
                    </ul>
                </li>
                <!-- User Account Menu -->
                <li class="dropdown user user-menu">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <img src="~/images/logos/manlogo.jpg" class="user-image" alt="User Image">
                        <span class="hidden-xs" style="color: white;">Admin 01</span>
                    </a>
                    <ul class="dropdown-menu">
                        <li class="user-header" style="background-color: #34495e;">
                            <div class="pull-left user-img">
                                <img src="~/images/logos/manlogo.jpg" class="img-responsive" alt="User">
                            </div>
                            <p class="text-left" style="color: white;">Berk Yıldız <small style="color: white;">multishop@gmail.com</small></p>
                            <div class="view-link text-left">
                                <a href="#" style="color: white;">View Profile</a>
                            </div>
                        </li>
                        <li><a href="#" style="color: white;"><i class="icon-profile-male"></i> My Profile</a></li>
                        <li><a href="#" style="color: white;"><i class="icon-wallet"></i> My Balance</a></li>
                        <li><a href="#" style="color: white;"><i class="icon-envelope"></i> Inbox</a></li>
                        <li role="separator" class="divider"></li>
                        <li><a href="#" style="color: white;"><i class="icon-gears"></i> Account Setting</a></li>
                        <li role="separator" class="divider"></li>
                        <li><a href="#" style="color: white;"><i class="fa fa-power-off"></i> Logout</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </nav>
</header>
